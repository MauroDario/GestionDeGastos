@model IEnumerable<GestionDeGastos.Models.Cuenta>

@{
    ViewBag.Title = "Index";
}

<h2>Cuentas</h2>


<table class="table highlight card-panel">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr onclick="location.href = '@(Url.Action("Details", "Cuentas", new { id=item.ID }) )'">
            <td><i class="material-icons @(item.Tipo.Color)-text">@item.Tipo.Icono</i></td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionTipoDeCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>

        </tr>
    }

</table>

<div class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red" href="@Url.Action("Create", "Cuentas")">
        <i class="material-icons">add</i>
    </a>
</div>
